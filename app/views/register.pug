extends layout.pug

block navbar
  include mainbar.pug

block content
  main
    .container.py-5
      .row.justify-content-center
        .col-lg-7
          .card.shadow-sm
            .card-body.p-4.p-lg-5
              h1.fw-bold.mb-3 Create account
              p.text-muted.mb-4 Join Food Connect to share or claim donations.
              form(method='post' action='/set-password' novalidate)
                .row.g-3
                  .col-md-6
                    label.form-label(for='email') Email
                    input#email.form-control(type='email' name='email' required)

                  .col-md-6
                    label.form-label(for='password') Password
                    input#password.form-control(type='password' name='password' required)

                .d-grid.mt-4
                  button.btn.btn-primary.btn-lg(type='submit') Create account
                p.mb-0.mt-3.text-muted Already have an account?
                  |  
                  a(href='/login') Sign in
