extends layout.pug

block navbar
  include mainbar.pug

block content
  main
    .container.py-5
      .row.justify-content-center
        .col-lg-6
          .card.shadow-sm
            .card-body.p-4.p-lg-5
              h1.fw-bold.mb-3 Sign in
              p.text-muted.mb-4 Access your Food Connect dashboard.
              form(method='post' action='/login' novalidate)
                .mb-3
                  label.form-label(for='email') Email
                  input#email.form-control(type='email' name='email' placeholder='you@example.com' required)
                .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(type='password' name='password' placeholder='••••••••' required)
                .d-flex.justify-content-between.align-items-center.mb-3
                  .form-check
                    input#remember.form-check-input(type='checkbox' name='remember')
                    label.form-check-label(for='remember') Remember me
                  a(href='#').small Forgot password?
                .d-grid.mb-3
                  button.btn.btn-primary.btn-lg(type='submit') Continue
                p.mb-0.text-muted Don't have an account?
                  |  
                  a(href='/register') Create one
